<html>
  <head>
    <meta charset="utf-8">
    <title>Login/Register</title>
    <link rel="stylesheet" href="/assets/styles/main.css" media="all">

    <script src="/assets/js/jquery-2.2.4.min.js"></script>
    <script src="/assets/js/init.js"></script>
    <script src="/assets/js/main.js"></script>
  </head>
  <body>
    <% if (typeof error !== 'undefined' && error.message) { %>
      <p class="error">
        <%= error.message %>
      </p>
    <% } %>

    <div class="logmod">
      <div class="logmod__wrapper">
        <span class="logmod__close">Close</span>
        <div class="logmod__container">
          <ul class="logmod__tabs">
            <li data-tabtar="lgm-1"><a href="#"></a></li>
          </ul>
          <div class="logmod__tab-wrapper">
            <div class="logmod__tab lgm-1">
              <div class="logmod__heading">
                <span class="logmod__heading-subtitle"><strong>Review your account</strong></span>
              </div>
              <div class="logmod__form">
                <form name="register-form" accept-charset="utf-8" action="/edit" class="simform" method="POST">
                  <div class="sminputs">
                    <div class="input full">
                      <label class="string optional" for="user-name">Fullname</label>
                      <input class="string optional" maxlength="255" id="user-fullname" placeholder="Fullname" name="fullname" type="text" size="200" value="<%= user.fullname %>" />
                    </div>
                  </div>
                  <div class="sminputs">
                    <div class="input full">
                      <label class="string optional" for="user-name">Email</label>
                      <span><%= user.email %></span>
                      <input type="hidden" name="email" value="<%= user.email %>" />
                    </div>
                  </div>
                  <% if (typeof isSocialRegister !== 'undefined' && isSocialRegister) { %>
                    <div class="sminputs">
                      <div class="input string optional">
                        <label class="string optional" for="user-pw">Password</label>
                        <input class="string optional" maxlength="255" id="user-pw" placeholder="Password" type="password" name="password" size="50" />
                      </div>
                      <div class="input string optional">
                        <label class="string optional" for="user-pw-repeat">Repeat password *</label>
                        <input class="string optional" maxlength="255" id="user-pw-repeat" placeholder="Repeat password" type="password" name="rePassword" size="50" />
                      </div>
                    </div>
                  <% } %>
                  <div class="simform__actions">
                    <input class="sumbit" type="submit" value="Proceed" />
                    <span class="simform__actions-sidetext">By creating an account you agree to our <a class="special" href="#" target="_blank" role="link">Terms & Privacy</a></span>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
